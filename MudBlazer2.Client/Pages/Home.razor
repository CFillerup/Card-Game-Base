            List<CardBase> rareItems = new List<CardBase>();
            List<CardBase> epicItems = new List<CardBase>();
            List<CardBase> legendaryItems = new List<CardBase>();

            foreach (var item in heldItems)
            {
                switch (item.Rarity)
